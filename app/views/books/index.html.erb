<section class="p-3 p-lg-5">
  <h1>All Books</h1>

  <table class="table">
  <thead>
    <tr>
      <th>Picture</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Isbn</th>
      <th>Status</th>
      <th colspan="1">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag(book.resize) %></td>
        <td><%= book.title %></td>
        <td><div><%= book.description %></div></td>
        <td><%= book.author %></td>
        <td><%= book.isbn %></td>
        <% if book.is_borrowed? %>
          <td><div class="btn btn-danger"><%= book.status %></div></td>
        <% else %>
          <td><div class="btn btn-success"><%= book.status %></div></td>
        <% end %>
        <td><%= link_to 'Show', book, :class => "btn btn-primary", :style => "color: #ffffff" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
<%= will_paginate @books, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>



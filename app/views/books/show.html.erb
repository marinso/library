<section class="p-3 p-lg-5">

  <div class="p-3" style="float: left;"><%= image_tag(@book.thumbnail.variant(resize: "500x500")) %></div>

  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @book.description %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <p>
    <strong>Isbn:</strong>
    <%= @book.isbn %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @book.status %>
  </p>

  <%= link_to 'Back', books_path %>
</section>

<section class="p-3 p-lg-5">
  <h1>All Books</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th>Isbn</th>
        <th>Status</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <td><%= book.status %></td>
          <td><%= link_to 'Show', admin_book_path(book) %></td>
          <td><%= link_to 'Edit', edit_admin_book_path(book) %></td>
          <td><%= link_to 'Destroy', admin_book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

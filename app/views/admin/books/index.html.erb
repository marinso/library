<section class="p-3 p-lg-5">
  <h1>All Books</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th>Isbn</th>
        <th>Status</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><div><%= book.description %></div></td>
          <td><%= book.author %></td>
          <td><%= book.isbn %></td>
          <% if book.is_borrowed? %>
            <td><div class="btn btn-danger"><%= book.status %></div></td>
          <% else %>
            <td><div class="btn btn-primary"><%= book.status %></div></td>
          <% end %>

          <td><%= link_to 'Show', admin_book_path(book), class: "btn btn-primary", style: "color: #ffffff" %></td>
          <td><%= link_to 'Edit', edit_admin_book_path(book), class: "btn btn-warning", style: "color: #ffffff" %></td>
          <td><%= link_to 'Destroy', admin_book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: #ffffff" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
